{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean bin",
            "type": "shell",
            "group": "build",
            "command":"rm",
            "options": {
				"cwd": "${workspaceFolder}\\bin"
			},
            "args": ["*"]
        },
        {
            "label": "clean cache",
            "type": "go",
            "command": "clean",
			"args": [
				"-cache"
			],
            "group": "build",
            "dependsOn":[
                "clean bin"
            ]
        },
        {
            "label": "build v1",
            "type": "go",
            "command": "build",
			"args": [
                "-tags",
                "v1",
				"-o",
				"${workspaceFolder}\\bin\\tilinghelper-${config:from_branch}_${config:to_branch}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}\\cmd\\tilinghelper"
			},
            "group": "build",
            "dependsOn":[
                "clean bin"
            ]
        },
        {
            "label": "build v0",
            "type": "go",
            "command": "build",
			"args": [
                "-tags",
                "v0",
				"-o",
				"${workspaceFolder}\\bin\\tilinghelper-${config:from_branch}_${config:to_branch}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}\\cmd\\tilinghelper"
			},
            "group": "build",
            "dependsOn":[
                "clean bin"
            ]
        },
        {
            "label": "build default",
            "type": "go",
            "command": "build",
			"args": [
				"-o",
				"${workspaceFolder}\\bin\\tilinghelper-${config:from_branch}_${config:to_branch}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}\\cmd\\tilinghelper"
			},
            "group": "build",
            "dependsOn":[
                "clean bin"
            ]
        },
        {
            "label": "clean cache && build default",
            "type": "go",
            "command": "build",
			"args": [
				"-o",
				"${workspaceFolder}\\bin\\tilinghelper-${config:from_branch}_${config:to_branch}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}\\cmd\\tilinghelper"
			},
            "group": "build",
            "dependsOn":[
                "clean cache"
            ]
        }
    ]
}
